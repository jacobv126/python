import sys
uResponse = input("Welcome to the age calculator. would you like to try? 'y'/'n' ")
if uResponse == "n":
  print("Ok")
  sys.exit()  
if uResponse == "y":
  uName = input("input 'name': ")
  uAge = input("input age: ")
  print(uName, uAge)
  print("The year will be " + str(100 - uAge + 2017) + " once you are a hundred")
sys.exit()
